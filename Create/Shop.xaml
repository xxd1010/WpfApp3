<UserControl x:Class="WpfApp3.Create.shopBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3.Create"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">
    <Grid>
        <TextBlock x:Name="cropName_Shop" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Name_Shop" VerticalAlignment="Top" Height="15" Width="100" Margin="0,3,0,0"/>
        <TextBlock x:Name="cropLevel_Shop" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Level" VerticalAlignment="Top" Height="15" Width="45" Margin="0,23,0,0"/>
        <TextBlock x:Name="cropPrice_Shop" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Price" VerticalAlignment="Top" Height="15" Width="50" Margin="50,23,0,0"/>
        <TextBlock x:Name="cropType_Shop" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Type" VerticalAlignment="Top" Height="15" Width="50" Margin="0,42,0,0"/>
        <Button x:Name="Buy" Content="Buy" HorizontalAlignment="Left" Margin="53,40,0,0" Width="47" Height="20" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
